<%- include("partials/header") -%>


<form class="" action="/addClass" method="post">

  <div class="form-floating">
    <input class="form-control" placeholder="Enter the Day" type="text" required id="day" name="day">
    <label for="day">Day</label>
  </div>
  <div class="form-floating">
    <input class="form-control" onchange="onTimeChange()" type="time" required id="start" name="start">
    <label for="start">Start time</label>
  </div>
  <div class="form-floating">
    <input class="form-control" type="time" required id="end" name="end">
    <label for="end">End time</label>
  </div>
  <div class="form-floating">
    <input class="form-control" type="text" required id="subject" placeholder="Subject" name="subject">
    <label for="subject">Subject (should not contain "-")</label>
  </div>
  <div class="new-class">
    <button type="submit" class="add btn btn-outline-primary">Add</button>
  </div>

</form>


<%- include("partials/footer") -%>
