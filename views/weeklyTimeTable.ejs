          <% keyPeriod.forEach(function(ele){ %>
            <% if(ele.day=="monday"){%>
              <% if(ele.period==j){%>
                <td><%= ele.subject %></td>
              <% i = true;} %>
            <% } });%>
          <% if(i==false){ %>
         <td>-</td>
        <% } i=false;} %>    
