<div class="head">
  <h4>Timing</h4>
</div>


<div class="period">
  <% var i=false; %>
        <% for(let j=1; j < 9; j++){ %>
          <% keyTiming.forEach(function(ele){ %>
              <% if(ele.period==j){ %>
                <p>Period <%= j %>: <span style="font-size: 1.1rem; position: relative; bottom: .5px; left: 5px;"><%= ele.start %> - <%= ele.end %></span></p>  
              <% i = true;} %>
            <% });%>
          <% if(i==false){ %>
         <p>Period <%= j %>: -</p>
        <% } i=false;} %>
</div>



